doctype html
html(lang='en')
  head
    include head
  body
    div.container(style='margin-top: 25px')
      div.well
        div(style='text-align: center;')
          img(src='logo-dark.png', alt='Simplicit&eacute; Software', style='width: 100%; max-width: 500px;')
      div.row
        div.col-md-12
          p
            a(href='')
              span.glyphicon.glyphicon-refresh
            != '&nbsp;' + size + ' app(s)'
      div.row
        each row in rows
          div.col-md-3
            div(class='panel panel-' + (row.status === 200 ? 'success' : (row.status === 0 ? 'default' : 'danger')), id='app-' + row.name)
              div.panel-heading
                h4.text-center= row.name
              div.panel-body(style='min-height: 200px;')
                p.text-center
                  img(src=(row.health ? row.health.platform.version.substring(0,3) : 'any') + '-dark.png')
                  if (row.status === 200)
                    p.text-center
                      a(href=row.url, target='_blank')= row.url
                    p.text-right
                      a.btn.btn-success(href='health?name=' + row.name, role='button') Details
                  else
                    p.text-center= row.url + (row.status !== 0 ? ' (status ' + row.status + ')' : '')
      include foot