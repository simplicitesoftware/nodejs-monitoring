doctype html
html(lang="en")
  head
    include head
  body
    div.container(style="margin-top: 25px")
      div.well
        div(style="text-align: center;")
          img(src="logo.png", alt="Simplicit&eacute; Software", style="width: 100%; max-width: 500px;")
      div.row
        div.col-md-12
          p!= size + " app(s) found.&nbsp;"
            a(href='') [refresh]
      div.row
        each row in rows
          div.col-md-3
            div(class='panel panel-' + (row.status === 200 ? 'success' : 'danger'), id='app-' + row.name)
              div.panel-heading
                h4.text-center= row.name
              div.panel-body(style='min-height: 150px;')
                p.text-center
                  img(src=row.health ? row.health.platform.version.substring(0,3) + '.png' : 'any.png')
                  if (row.status === 200)
                    a(href='health?name=' + row.name)= row.url
                  else
                    = row.url + ' (status ' + row.status + ')'
      include foot